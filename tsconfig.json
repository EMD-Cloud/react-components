{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "out-tsc",
    "rootDir": "./",
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/stories"]
}
